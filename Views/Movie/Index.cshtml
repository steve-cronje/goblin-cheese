                            <td>@fat</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td colspan="2">Larry the Bird</td>
                            <td>@twitter</td>
                        </tr> *@
                    }
                </tbody>
                </table>
        </div>
        @* @foreach (var movie in Model)
