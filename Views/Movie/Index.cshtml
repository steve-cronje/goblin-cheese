@if (Model.Count() >= 1)
{
    <div class="row px-3">
        <div class="col-9 border border-dark rounded-3 bg-light">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">@Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSortParm, searchQuery = ViewBag.searchQuery })</th>
                        <th scope="col">@Html.ActionLink("Release Date", "Index", new { sortOrder = ViewBag.DateSortParm, searchQuery = ViewBag.searchQuery })</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <a class="">
                            <tr>
                                <td class="movie-index-poster-col"><img src="data:image/@movie.Poster?.ContentType;base64, @movie.Poster?.getData()" class="w-75"></td>
                                <td class="fs-4 fw-bold pt-4">@movie.Title</td>
                                <td class="fs-5 fw-bold pt-4 w-25">@movie.ReleaseDate</td>
                            </tr>
                        </a>
                        @* <tr>
                            <th scope="row">2</th>
